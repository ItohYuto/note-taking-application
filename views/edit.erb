<form edit method="post" action="/notes/<%= @note[:id] %>">
  <div>
    <label for="title">タイトル</label>
    <input type="text" id="title" name="title" value="<%= @note[:title] %>" required="true">
  </div>
  <div>
    <label for="content">内容</label>
    <textarea id="content" name="content" rows="8"><%= @note[:content] %></textarea>
  </div>
  <div class="btn-section">
    <a class="btn" href="/notes/<%= @note[:id] %>">戻る</a>
    <input type="hidden" name="_method" value="PATCH">
    <input class="btn" type="submit" value="送信">
  </div>
</form>
